{
  "name": "zero-one-ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "npx serve@latest out",
    "lint": "next lint",
    "test": "vitest run",
    "storybook": "__NEXT_PRIVATE_RENDER_WORKER=defined storybook dev -p 6006",
    "storybook:build": "__NEXT_PRIVATE_RENDER_WORKER=defined storybook build",
    "storybook:test": "__NEXT_PRIVATE_RENDER_WORKER=defined test-storybook",
    "storybook:ci": "concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"pnpm run storybook:ci:serve\" \"pnpm run storybook:ci:test\"",
    "storybook:ci:serve": "pnpm run storybook:build && npx http-server storybook-static --port 6006 --silent",
    "storybook:ci:test": "wait-on tcp:127.0.0.1:6006 && pnpm run storybook:test"
  },
  "dependencies": {
    "@faker-js/faker": "^8.4.1",
    "@floating-ui/react": "^0.26.17",
    "@hookform/resolvers": "^3.3.4",
    "@mantine/hooks": "^7.6.0",
    "@radix-ui/react-checkbox": "^1.1.1",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-radio-group": "^1.1.3",
    "@radix-ui/react-slider": "^1.1.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@react-icons/all-files": "https://github.com/react-icons/react-icons/releases/download/v5.2.1/react-icons-all-files-5.2.1.tgz",
    "@tabler/icons-react": "^2.43.0",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tanstack/react-query": "^5.28.4",
    "@tanstack/react-query-devtools": "^5.49.0",
    "clsx": "^2.0.0",
    "cmdk": "^1.0.0",
    "date-fns": "^3.6.0",
    "framer-motion": "^11.3.19",
    "lucide-react": "^0.358.0",
    "msw": "^2.2.13",
    "next": "v14.2",
    "re-resizable": "^6.9.17",
    "react": "^18",
    "react-day-picker": "^8.10.1",
    "react-dom": "^18",
    "react-hook-form": "^7.50.1",
    "sonner": "^1.5.0",
    "tailwind-merge": "^2.2.2",
    "tailwind-variants": "^0.2.1",
    "zod": "^3.23.7"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.3",
    "@storybook/addon-links": "^10.1.10",
    "@storybook/addon-onboarding": "^10.1.10",
    "@storybook/nextjs": "^10.1.10",
    "@storybook/react": "^10.1.10",
    "@storybook/test": "^8.3.3",
    "@storybook/test-runner": "^0.24.2",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "autoprefixer": "^10.0.1",
    "concurrently": "^9.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.0.2",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-storybook": "^10.1.10",
    "http-server": "^14.1.1",
    "msw-storybook-addon": "^2.0.2",
    "postcss": "^8",
    "prettier": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "storybook": "^10.1.10",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5",
    "vitest": "^2.1.1",
    "wait-on": "^8.0.1",
    "@storybook/addon-docs": "^10.1.10"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
